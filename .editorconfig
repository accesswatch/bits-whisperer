# EditorConfig â€” consistent formatting across all editors and IDEs.
# See https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.py]
indent_size = 4
max_line_length = 100

[*.{yml,yaml}]
indent_size = 2

[*.{json,toml}]
indent_size = 2

[*.md]
# Trailing whitespace can be significant in Markdown (line breaks)
trim_trailing_whitespace = false
max_line_length = 100

[*.{html,css}]
indent_size = 2

[Makefile]
indent_style = tab
